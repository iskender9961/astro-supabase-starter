---
import { getEntry } from "astro:content";
import Alert from "../components/Alert.astro";
import Guide from "../components/Guide.astro";
import LegacyLayout from "../components/LegacyLayout.astro";
import TableRow from "../components/TableRow.astro";
import { supabase } from "../utils/database";

export const prerender = false;

let frameworks;
let frameworksError;

if (supabase) {
  const { data, error } = await supabase
    .from("frameworks")
    .select("*")
    .order("likes", { ascending: false });
  frameworks = data;
  frameworksError = error;
}

const connectGuide = await getEntry("guides", "guide-connect-supabase");
const fetchDataGuide = await getEntry("guides", "guide-fetch-data");
---

<LegacyLayout title="Web Frameworks (Maintenance)">
  {
    supabase ? (
      frameworks ? (
        <>
          <h1 class="mb-8 text-4xl font-bold">Vote for Your Favorite Web Framework</h1>
          <table class="w-full text-left">
            <thead>
              <tr class="font-mono text-base border-t border-b border-neutral-600">
                <th class="py-4">Name</th>
                <th class="py-4">Logo</th>
                <th class="py-4">Likes</th>
                <th class="py-4">Details</th>
              </tr>
            </thead>
            <tbody>
              {frameworks?.map((framework) => (
                <TableRow framework={framework} detailsBase="/maintenance/frameworks" />
              ))}
            </tbody>
          </table>
        </>
      ) : (
        <>
          {frameworksError && (
            <Alert
              title={frameworksError.code}
              text={frameworksError.message}
              variant="error"
            />
          )}
          {fetchDataGuide && <Guide guide={fetchDataGuide} />}
        </>
      )
    ) : (
      <>
        <Alert
          title="Finish setting up your new site"
          text="Before your website is ready, you must complete the steps from the guide below to create, populate, and connect your Supabase database."
        />
        {connectGuide && <Guide guide={connectGuide} />}
      </>
    )
  }
</LegacyLayout>
