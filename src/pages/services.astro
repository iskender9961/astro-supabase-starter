---
import NewLayout from "../components/NewLayout.astro";
import ServiceCard from "../components/ServiceCard.astro";

const services = [
  {
    title: "Orbital Software Solutions",
    description: "Custom mission planning, telemetry processing, and autonomous operations software designed for the demands of the new space economy. From ground segment tools to flight software interfaces, we build systems that operators trust.",
    icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17.25 6.75L22.5 12l-5.25 5.25m-10.5 0L1.5 12l5.25-5.25m7.5-3l-4.5 16.5"/></svg>',
  },
  {
    title: "Space Situational Awareness",
    description: "Advanced tracking, monitoring, and predictive analytics for orbital assets and debris fields. Our SSA solutions help operators make informed decisions about collision avoidance and orbital maneuver planning.",
    icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>',
  },
  {
    title: "In-Orbit Servicing Technology",
    description: "Enabling satellite life extension, close-proximity inspection, and active debris removal. We develop the autonomous guidance, navigation, and control software that makes rendezvous and proximity operations reliable and safe.",
    icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M11.42 15.17l-5.1-5.1m0 0L12 4.37m-5.68 5.7h11.8M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>',
  },
  {
    title: "Mission Integration & Support",
    description: "End-to-end mission design, spacecraft integration, launch coordination, and 24/7 operational support. We partner with you from concept through commissioning and beyond, ensuring mission success at every phase.",
    icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M15.59 14.37a6 6 0 01-5.84 7.38v-4.8m5.84-2.58a14.98 14.98 0 006.16-12.12A14.98 14.98 0 009.631 8.41m5.96 5.96a14.926 14.926 0 01-5.841 2.58m-.119-8.54a6 6 0 00-7.381 5.84h4.8m2.581-5.84a14.927 14.927 0 00-2.58 5.84m2.699 2.7c-.103.021-.207.041-.311.06a15.09 15.09 0 01-2.448-2.448 14.9 14.9 0 01.06-.312m-2.24 2.39a4.493 4.493 0 00-1.757 4.306 4.493 4.493 0 004.306-1.758M16.5 9a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"/></svg>',
  },
  {
    title: "Simulation & Digital Twins",
    description: "High-fidelity orbital simulation environments and digital twin platforms for spacecraft. Test maneuvers, validate autonomy algorithms, and predict anomalies before they happen — all without risking flight hardware.",
    icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.75 3.104v5.714a2.25 2.25 0 01-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 014.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0112 15a9.065 9.065 0 00-6.23.693L5 14.5m14.8.8l1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0112 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.61L5 14.5"/></svg>',
  },
  {
    title: "Data & Analytics Platform",
    description: "Processing, analyzing, and delivering actionable insights from orbital data at scale. From Earth observation pipelines to constellation health monitoring, our data platform transforms raw telemetry into operational intelligence.",
    icon: '<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.75 3v11.25A2.25 2.25 0 006 16.5h2.25M3.75 3h-1.5m1.5 0h16.5m0 0h1.5m-1.5 0v11.25A2.25 2.25 0 0118 16.5h-2.25m-7.5 0h7.5m-7.5 0l-1 3m8.5-3l1 3m0 0l.5 1.5m-.5-1.5h-9.5m0 0l-.5 1.5m.75-9l3-3 2.148 2.148A12.061 12.061 0 0116.5 7.605"/></svg>',
  },
];
---

<NewLayout title="Services — Journals" description="From orbital software to mission integration, Journals provides the technology backbone for modern space operations.">
  <!-- Hero -->
  <section class="relative pt-32 pb-20 sm:pt-40 sm:pb-28">
    <div class="absolute top-1/3 left-1/4 w-80 h-80 bg-cyan-500/10 rounded-full blur-[120px]"></div>
    <div class="absolute bottom-0 right-1/4 w-64 h-64 bg-violet-500/8 rounded-full blur-[100px]"></div>
    <div class="relative z-10 max-w-4xl mx-auto px-6 lg:px-8 text-center">
      <p class="text-cyan-400 text-xs uppercase tracking-[0.3em] mb-4 font-medium">What We Do</p>
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6">
        Services Built for
        <span class="bg-gradient-to-r from-cyan-400 to-violet-400 bg-clip-text text-transparent">Space</span>
      </h1>
      <p class="text-gray-400 text-lg leading-relaxed max-w-2xl mx-auto">
        From orbital software to mission integration, we provide the technology backbone for modern space operations. Every solution is engineered for the demands of the orbital environment.
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="relative pb-24 sm:pb-32">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {services.map((service) => (
          <ServiceCard
            title={service.title}
            description={service.description}
            icon={service.icon}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="relative py-24 sm:py-32 border-y border-gray-800/50">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="text-center mb-16">
        <p class="text-cyan-400 text-xs uppercase tracking-[0.3em] mb-3 font-medium">How We Work</p>
        <h2 class="text-3xl md:text-4xl font-bold">Our Approach</h2>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 rounded-full border border-cyan-400/30 bg-cyan-400/5 flex items-center justify-center">
            <span class="text-cyan-400 font-bold text-xl">01</span>
          </div>
          <h3 class="text-lg font-semibold mb-3">Understand</h3>
          <p class="text-gray-400 text-sm leading-relaxed">We start by deeply understanding your mission requirements, constraints, and operational environment.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 rounded-full border border-cyan-400/30 bg-cyan-400/5 flex items-center justify-center">
            <span class="text-cyan-400 font-bold text-xl">02</span>
          </div>
          <h3 class="text-lg font-semibold mb-3">Engineer</h3>
          <p class="text-gray-400 text-sm leading-relaxed">We design and build solutions using rigorous engineering practices suited for space-grade reliability.</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 mx-auto mb-6 rounded-full border border-cyan-400/30 bg-cyan-400/5 flex items-center justify-center">
            <span class="text-cyan-400 font-bold text-xl">03</span>
          </div>
          <h3 class="text-lg font-semibold mb-3">Deliver & Support</h3>
          <p class="text-gray-400 text-sm leading-relaxed">We deliver tested, documented solutions and provide ongoing mission support through every operational phase.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="relative py-24 sm:py-32">
    <div class="absolute inset-0 bg-gradient-to-b from-transparent via-cyan-500/[0.03] to-transparent"></div>
    <div class="relative z-10 max-w-3xl mx-auto px-6 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Have a Mission in Mind?</h2>
      <p class="text-gray-400 text-lg mb-10">Let's discuss how Journals can support your space operations.</p>
      <a
        href="/contact"
        class="inline-block border-2 border-cyan-400 text-cyan-400 rounded-full px-10 py-4 text-sm font-medium uppercase tracking-widest no-underline hover:no-underline hover:bg-cyan-400 hover:text-gray-950 transition-all duration-300"
      >
        Contact Us
      </a>
    </div>
  </section>
</NewLayout>
