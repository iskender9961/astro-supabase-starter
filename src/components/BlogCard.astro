---
interface Props {
  title: string;
  description: string;
  date: string;
  slug: string;
  tags?: string[];
}

const { title, description, date, slug, tags } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<article class="group border border-gray-800 rounded-lg overflow-hidden bg-gray-900/20 transition-all duration-300 hover:border-gray-700">
  <!-- Gradient accent bar -->
  <div class="h-1 bg-gradient-to-r from-cyan-500 via-blue-500 to-violet-500 opacity-50 group-hover:opacity-100 transition-opacity"></div>

  <div class="p-6 sm:p-8">
    <div class="flex items-center gap-3 mb-4">
      <time class="text-xs text-gray-500 uppercase tracking-wider">{formattedDate}</time>
      {tags && tags.length > 0 && (
        <span class="text-xs text-cyan-400/60 border border-cyan-400/20 rounded-full px-2.5 py-0.5">
          {tags[0]}
        </span>
      )}
    </div>

    <h3 class="text-lg font-semibold text-white mb-3 group-hover:text-cyan-400 transition-colors">
      <a href={`/blog/${slug}`} class="no-underline hover:no-underline text-inherit">
        {title}
      </a>
    </h3>

    <p class="text-gray-400 text-sm leading-relaxed mb-5 line-clamp-3">{description}</p>

    <a
      href={`/blog/${slug}`}
      class="text-sm text-cyan-400 font-medium no-underline hover:no-underline hover:text-cyan-300 transition-colors inline-flex items-center gap-1.5"
    >
      Read more
      <svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
      </svg>
    </a>
  </div>
</article>
