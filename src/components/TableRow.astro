---
import type { Tables } from "../../supabase/types.ts";

interface Props {
  framework: Tables<"frameworks">;
  detailsBase?: string;
}

const { framework, detailsBase = "/frameworks" } = Astro.props;
---

<tr class="border-b border-white/10 hover:bg-white/[0.025] transition">
  <td class="py-4 pr-4">
    <p class="text-base font-semibold text-white">{framework.name}</p>
    <a
      href={framework.url}
      target="_blank"
      rel="noreferrer"
      class="text-xs text-cyan-200 no-underline hover:underline"
    >
      {framework.url}
    </a>
  </td>
  <td>
    <img
      src={`/.netlify/images?url=/images/${framework.logo}`}
      class="h-12 w-auto border border-white/10 rounded-md bg-white/5 p-2"
      alt={framework.name}
    />
  </td>
  <td class="font-semibold text-cyan-100">{framework.likes}</td>
  <td>
    <a
      href={`${detailsBase}/${framework.id}`}
      class="inline-flex items-center gap-2 no-underline text-sm font-semibold text-slate-100 border border-white/15 rounded-full px-4 py-1.5 hover:border-cyan-300 hover:text-cyan-100 transition"
    >
      View details
      <span aria-hidden="true">&rarr;</span>
    </a>
  </td>
</tr>
