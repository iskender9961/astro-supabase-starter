---
const pathname = Astro.url.pathname;
const isHome = pathname === "/";
const navLinks = [
  { href: "#mission", label: "Mission" },
  { href: "#capabilities", label: "Capabilities" },
  { href: "#operations", label: "Operations" },
  { href: "/maintenance", label: "Maintenance" },
];
---

<header class="sticky top-0 z-40 border-b border-white/8 bg-[#09121d]/75 backdrop-blur-xl">
  <nav class="max-w-6xl mx-auto px-5 sm:px-8 lg:px-10 py-4 flex items-center justify-between gap-4">
    <a href="/" class="inline-flex items-center gap-3 no-underline">
      <span class="h-9 w-9 rounded-full border border-cyan-300/55 bg-cyan-400/10 flex items-center justify-center text-cyan-200 text-xs font-bold tracking-[0.2em]">FP</span>
      <span class="font-bold text-sm sm:text-base tracking-[0.18em] uppercase">Final Proximity</span>
    </a>

    <ul class="hidden md:flex items-center gap-7 text-sm text-slate-200">
      {navLinks.map((link) => (
        <li>
          <a
            href={
              link.href.startsWith("#")
                ? (isHome ? link.href : `/${link.href}`)
                : link.href
            }
            class="no-underline transition hover:text-cyan-200"
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>

    <a
      href="mailto:hello@finalproximity.com"
      class="primary-btn border border-cyan-300/65 text-cyan-100 hover:bg-cyan-300 hover:text-[#082131] no-underline"
    >
      Contact
    </a>
  </nav>
</header>
