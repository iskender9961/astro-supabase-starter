---
interface Props {
  title?: string;
  text?: string;
  variant?: "error" | "note";
}

const { title, text, variant } = Astro.props;
---

<div
  class:list={[
    "surface-card p-6 mb-4 space-y-1 relative",
    variant === "error"
      ? "text-red-100 border-red-300/35 bg-red-500/10"
      : "text-emerald-100 border-emerald-300/35 bg-emerald-500/10",
  ]}
>
  {title && <p class="text-lg font-bold tracking-tight">{title}</p>}
  {text && <p class="text-sm">{text}</p>}
  <span class="absolute -top-2 -left-2 flex h-3.5 w-3.5">
    <span
      class:list={[
        "animate-ping absolute inline-flex h-full w-full rounded-full opacity-75",
        variant === "error" ? "bg-red-200" : "bg-emerald-200",
      ]}></span>
    <span
      class:list={[
        "relative inline-flex rounded-full h-3.5 w-3.5",
        variant === "error" ? "bg-red-300" : "bg-emerald-300",
      ]}></span>
  </span>
</div>
