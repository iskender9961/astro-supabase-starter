---
import { type CollectionEntry, render } from "astro:content";

interface Props {
  guide: CollectionEntry<"guides">;
}

const { guide } = Astro.props;
const { title } = guide.data;
const { Content } = await render(guide);
---

<article class="surface-card p-6 sm:p-8">
  <h1 class="mb-6 text-2xl font-bold tracking-tight">
    {title}
  </h1>
  <div class="prose prose-slate max-w-none prose-headings:text-slate-100 prose-p:text-slate-200 prose-strong:text-slate-100 prose-code:text-cyan-200 prose-a:text-cyan-200 prose-a:no-underline hover:prose-a:text-cyan-100">
    <Content />
  </div>
</article>
